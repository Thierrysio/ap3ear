{% extends 'base.html.twig' %}

{% block title %}Espace avantages fidélité{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: #f6f7fb;
            font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            margin: 0;
            color: #1c1c1c;
        }

        .loyalty-wrapper {
            max-width: 1100px;
            margin: 48px auto;
            padding: 0 20px 40px;
        }

        .loyalty-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 16px;
            margin-bottom: 28px;
        }

        .loyalty-title {
            font-size: 28px;
            font-weight: 800;
            margin: 0;
            color: #0f172a;
        }

        .loyalty-subtitle {
            color: #475569;
            margin: 4px 0 0;
            font-size: 15px;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 18px;
        }

        .product-card {
            background: #fff;
            border-radius: 14px;
            padding: 18px;
            box-shadow: 0 8px 26px rgba(15, 23, 42, 0.08);
            border: 1px solid #e2e8f0;
        }

        .product-name {
            font-weight: 700;
            font-size: 17px;
            margin-bottom: 6px;
            color: #0f172a;
        }

        .product-meta {
            display: flex;
            align-items: baseline;
            gap: 8px;
            margin-bottom: 10px;
            color: #64748b;
            font-size: 14px;
        }

        .product-category {
            padding: 4px 10px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 12px;
            letter-spacing: 0.02em;
        }

        .product-category.gold {
            background: #fef3c7;
            color: #b45309;
            border: 1px solid #f59e0b;
        }

        .product-category.silver {
            background: #f8fafc;
            color: #0f172a;
            border: 1px solid #cbd5e1;
        }

        .product-category.bronze {
            background: #fff7ed;
            color: #9a3412;
            border: 1px solid #fdba74;
        }

        .product-price {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 22px;
            font-weight: 800;
            color: #111827;
        }

        .gold-bonus {
            color: #d97706;
            font-size: 14px;
            font-weight: 800;
            padding: 4px 8px;
            background: #fff7ed;
            border: 1px solid #f59e0b;
            border-radius: 8px;
            text-transform: uppercase;
            letter-spacing: 0.04em;
        }

        .product-description {
            margin-top: 8px;
            color: #475569;
            font-size: 14px;
            line-height: 1.5;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="loyalty-wrapper">
        <div class="loyalty-header">
            <div>
                <h1 class="loyalty-title">Espace avantages fidélité</h1>
                <p class="loyalty-subtitle">Vos avantages exclusifs évoluent selon votre catégorie.</p>
            </div>
        </div>

        <div class="products-grid">
            {% for product in products %}
                {% set categoryClass = product.category|lower|replace({' ': '-'}) %}
                {% set isGoldCategory = 'gold' in product.category|lower %}
                <article class="product-card">
                    <div class="product-name">{{ product.name }}</div>
                    <div class="product-meta">
                        <span class="product-category {{ categoryClass }}">{{ product.category }}</span>
                        <span class="product-price">
                            {{ product.price|number_format(2, ',', ' ') }} €
                            {% if isGoldCategory %}
                                <span class="gold-bonus">+1</span>
                            {% endif %}
                        </span>
                    </div>
                    <p class="product-description">
                        Avantage fidélité disponible dès maintenant pour vos prochaines commandes.
                    </p>
                </article>
            {% endfor %}
        </div>
    </div>
{% endblock %}
